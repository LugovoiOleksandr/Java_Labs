public class Main {
    public static void main(String[] args) {
        int number = 813;
        int reversed = 0;
        while(number != 0) {
            int digit = number % 10;
            reversed = reversed * 10 + digit;
            number /= 10;
        }
        System.out.println("Реверснуте число: " + reversed);
    }
}
